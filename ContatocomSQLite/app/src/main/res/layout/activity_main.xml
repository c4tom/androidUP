<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/txtNome"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Nome"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/txtCPF"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="CPF"
        app:layout_constraintTop_toBottomOf="@+id/txtNome"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/txtEmail"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email"
        app:layout_constraintTop_toBottomOf="@+id/txtCPF"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/txtEndereco"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="EndereÃ§o"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/txtTelefone"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="23dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Telefone"
        app:layout_constraintTop_toBottomOf="@+id/txtEndereco"
        tools:layout_editor_absoluteX="1dp" />

    <EditText
        android:id="@+id/txtEmpresa"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Empresa"
        app:layout_constraintTop_toBottomOf="@+id/txtTelefone"
        tools:layout_editor_absoluteX="2dp" />

    <EditText
        android:id="@+id/txtDataNascimento"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:inputType="date"
        android:text="Data de Nascimento"
        app:layout_constraintTop_toBottomOf="@+id/txtEmpresa"
        tools:layout_editor_absoluteX="1dp" />

    <Button
        android:id="@+id/btnSalvar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:onClick="salvarContato"
        android:text="Salvar"
        app:layout_constraintTop_toBottomOf="@+id/txtDataNascimento"
        tools:layout_editor_absoluteX="151dp" />

</androidx.constraintlayout.widget.ConstraintLayout>